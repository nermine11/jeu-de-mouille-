ligne = 7
colonne = 7

def grille(ligne: int) -> list:
    """fonction créant une grille en fonction des nombres de lignes i """
    list = []
    for e in range(ligne + 1):
        list.append(["*"] * 3)
    list[3][2:2] = ["*","*","*"]
    return list
grill = grille(ligne)
#print(grill)

def coup_valide(joueur:tuple) -> bool:
    """fonction montrant si un coup est valide : position vide et possible"""
    i, j = joueur
    value = True
    try:
        if i not in range(0, ligne+1) or j not in range(0, colonne+1) or (grill[i][j]) != "*":
            value = False
    except:
        value = False
    return value
#print(coup_valide((0,5)))

def jouer():
    if coup_valide(joueur):
        i, j = joueur
        grill[i][j] = 1

joueur = input("entrer les cordoonéés du pion: ")
joueur = tuple(int(x) for x in joueur.split(","))

jouer()
print(grill)

